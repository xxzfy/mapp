<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhyp="http://schemas.android.com/apk/res/com.zhao.mapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<!-- 历程进程图，流转位置 -->
    <LinearLayout
        android:id="@+id/ll_flowing_transfer_position"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        >
    </LinearLayout>
	<!-- 第一层选项卡 -->
    <LinearLayout
        android:id="@+id/ll_flowing_first_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/ll_flowing_transfer_position"
        android:layout_alignRight="@id/ll_flowing_transfer_position"
        android:layout_below="@id/ll_flowing_transfer_position"
        android:layout_marginTop="2dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:background="@color/BLUE"
        android:layout_marginBottom="2dp"
        >
        
    </LinearLayout>
	<FrameLayout
	    android:id="@+id/fl_flowing_context"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="60dp"
	    android:layout_below="@id/ll_flowing_first_tab"
	    android:background="@color/GREEN"
		>
	</FrameLayout>
	
</RelativeLayout>
