<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dip"
    android:layout_gravity="center"
    android:background="@android:drawable/btn_dialog"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dip"
        android:background="@color/WHITE"
        >
        <LinearLayout 
            android:id="@+id/ll_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentTop="true"
            android:layout_margin="1dip"
            android:gravity="center_vertical"
            android:background="@color/BLUE"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/tv_dialog_my_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="26sp"
                android:textColor="@color/WHITE"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="温馨提示"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dip"
            android:background="@android:drawable/btn_dialog"
            android:layout_marginEnd="5dip"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_dialog_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dip"
            android:layout_marginBottom="60dip"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/iv_dialog_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ship2_1"
                />
            <TextView 
                android:id="@+id/tv_dialog_my_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="32sp"
                android:layout_marginTop="20dip"
                android:textColor="@color/BLUE"
                android:text="正在加载请稍后"
                android:focusable="false"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
