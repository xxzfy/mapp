<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhao.mapp.FastLoginActivity" >

    <TextView
        android:id="@+id/tv_fast_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/input_password" />
	<TextView
	    android:id="@+id/tv_fast_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:layout_below="@id/tv_fast_login_title"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/input_password"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
         />
	<com.sample.drawpassword.component.LocusPassWordView
        android:id="@+id/lpv_fast_loginpassword"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>
</RelativeLayout>
