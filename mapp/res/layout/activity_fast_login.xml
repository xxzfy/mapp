<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhao.mapp.FastLoginActivity"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/tv_fast_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/input_password" />
	<EditText 
	    android:id="@+id/et_fast_login_name"
	    android:layout_width="300dp"
	    android:layout_height="50dp"
	    android:layout_marginTop="10dp"
	    android:layout_gravity="center_horizontal"
	    android:hint="@string/input_loginname"
	    />
	<EditText
	    android:id="@+id/et_fast_login_password"
	    android:layout_width="300dp"
	    android:layout_height="50dp"
	    android:layout_gravity="center_horizontal"
	    android:inputType="textPassword"
	    android:hint="@string/input_password"
	    />
	<Button 
	    android:id="@+id/btn_fast_login_setfast"
	    android:layout_width="200dp"
	    android:layout_height="50dp"
	    android:layout_marginTop="10dp"
	    android:layout_gravity="center_horizontal"
	    android:text="@string/_fastlogin"
	    />
	<com.zhao.mapp.drawpassword.component.LocusPassWordView
        android:id="@+id/lpv_fast_loginpassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />
</LinearLayout>
